#include<bits/stdc++.h>
using namespace std;
int main()
{
  int n;
  cin>>n;
   long long int a=1,b=1,i,c;
          if (n==1 || n==2) return 1;
          else
          {
              for(i=1;i<=(n-2);i++)
              {
                  //c=(a%1000000007+b%1000000007)%1000000007;
                  c=(a+b);
                  a=b%1000000007;
                  b=c%1000000007;

              }
              cout<<b;

          }
 }
